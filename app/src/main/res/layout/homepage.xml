<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/go_bg"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/top"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:gravity="start"
            android:id="@+id/btn_im"
            android:src="@drawable/ic_menu_gray_24dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="DashBoard"
            android:padding="10dp"
            android:textColor="@android:color/background_light"
            android:fontFamily="@font/scriptmtbold"
            />
    </LinearLayout>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/top"
    android:id="@+id/Still"
    android:textColor="@color/black"
    android:textSize="20sp"
    android:gravity="center"
    android:padding="8dp"
    android:text="Attendance List"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/Still">


    </android.support.v7.widget.RecyclerView>
    <TextView
        android:id="@+id/txt_infostatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/black"
        android:text="No Attendance Available" />
    <FrameLayout
        android:layout_below="@id/top"
        android:id="@+id/contai_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".student_profile"
    android:background="@color/common_google_signin_btn_text_light_disabled">
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="8dp"
        android:background="@color/colorPrimary"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="4dp"
            android:background="@drawable/ic_arrow_back_black_24dp"
            android:id="@+id/btstudentprofile" />
        <TextView
            android:layout_width="match_parent"
            android:text="STUDENT PROFILE"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <com.mikhaellopez.circularimageview.CircularImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/studentprofile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@drawable/background_nav_header_user_img"
        android:elevation="9dp"
        android:src="@drawable/go_first"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="1dp"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="8dp"
        android:elevation="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:background="@drawable/go_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profile_student_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="User Name"
                android:layout_marginTop="48dp"
                android:layout_marginBottom="16dp"
                android:padding="4dp"
                android:background="@color/colorPrimary"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_marginLeft="16dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="22dp"
                    android:src="@drawable/ic_email_black" />

                <TextView
                    android:id="@+id/profile_student_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:padding="8dp"
                    android:layout_marginLeft="5dp"
                    android:hint="E-Mail"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_marginLeft="16dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="22dp"
                    android:src="@drawable/ic_business_black" />

                <TextView
                    android:id="@+id/profile_student_department"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:padding="8dp"
                    android:hint="Department"
                    android:layout_marginLeft="5dp"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_marginLeft="16dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="22dp"
                    android:src="@drawable/ic_face_black" />

                <TextView
                    android:id="@+id/profile_student_father"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:hint="Father"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_marginLeft="16dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="22dp"
                    android:src="@drawable/ic_face_black" />

                <TextView
                    android:id="@+id/profile_student_mother"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:hint="Mother"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_marginLeft="16dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="22dp"
                    android:src="@drawable/ic_today_black" />

                <TextView
                    android:id="@+id/profile_student_sem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:hint="sem"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/profile_student_class"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:hint="Class"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_marginLeft="16dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="22dp"
                    android:src="@drawable/ic_call_black" />

                <TextView
                    android:id="@+id/profile_student_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:hint="Phone number"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>
    <Button
        android:id="@+id/profile_student_edit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:text="Edit Details"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:background="@drawable/roundbutton"
        android:textColor="@color/white"/>
</RelativeLayout>